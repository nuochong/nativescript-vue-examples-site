/* VuePress 容器插件样式 start */
.theorem {
  margin: 1rem 0;
  padding: 0.1rem 1.5rem;
  border-radius: 0.4rem;
  background-color: #f0f4f8;
  .title {
    font-weight: bold;
  }
}

.custom-block {
  &.right {
    color: transparentify($textColor, 0.4);
    font-size: 0.9rem;
    text-align: right;
  }
}
/* VuePress 容器插件样式 end */

/* VuePress代码显示器在小屏幕显示问题 */
@media (max-width: 419px) {
  .content div[class*='extra-class'] {
    margin: 0 !important;
    border-radius: 6px !important;
  }
}

